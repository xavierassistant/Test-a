<!DOCTYPE html>
<html>
<head>
  <title>Mood-Based Music Suggestions</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
    }

    h1 {
      color: #333;
    }

    form {
      margin-top: 20px;
    }

    button {
      padding: 10px 20px;
      background-color: #3498db;
      color: #fff;
      border: none;
      cursor: pointer;
    }

    #music-suggestions {
      margin-top: 20px;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <h1>How Are You Feeling?</h1>
  <form id="mood-form">
    <label for="mood">Select Your Mood:</label>
    <select id="mood" name="mood">
      <option value="happy">Happy</option>
      <option value="sad">Sad</option>
      <option value="calm">Calm</option>
      <option value="energetic">Energetic</option>
    </select>
    <button type="submit">Get Music Suggestions</button>
  </form>
  <div id="music-suggestions"></div>
  <script>
    const moodForm = document.getElementById('mood-form');
    const musicSuggestions = document.getElementById('music-suggestions');

    const moodToMusic = {
      happy: ['Pop', 'Rock', 'Upbeat'],
      sad: ['Soft Rock', 'Acoustic', 'Piano'],
      calm: ['Classical', 'Chill', 'Ambient'],
      energetic: ['EDM', 'Hip Hop', 'Dance']
    };

    moodForm.addEventListener('submit', function(event) {
      event.preventDefault();

      const selectedMood = moodForm.mood.value;
      const suggestions = moodToMusic[selectedMood];

      if (suggestions) {
        const suggestionsList = suggestions.map(suggestion => `<li>${suggestion}</li>`).join('');
        musicSuggestions.innerHTML = `<p>Here are some music suggestions for your mood:</p><ul>${suggestionsList}</ul>`;
      } else {
        musicSuggestions.innerHTML = '<p>No suggestions available for this mood.</p>';
      }
    });
  </script>
</body>
</html>
